<div class="tabulanil-message chat-card dnd5e2" data-uuid="{{actor.uuid}}">
  {{#if note }}
  <span>{{{ note }}}</span>
  {{/if}}
  <div class="card">
    <div class="title">
      <img src="{{ iconURL }}" alt="Insanity Icon" class="tabulanil-msg-icon">
      <h2>{{ title }}</h2>
    </div>
    <div class="details">
      <p>{{ description }}</p>
    </div>
  </div>
</div>
